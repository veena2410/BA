@model IEnumerable<FourSeasonsWebShop.Models.Item>

@{
    ViewBag.Title = "Index";
}

<h2>View Items</h2>

<p>
    @Html.ActionLink("Update New Item", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Title)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Price)
        </th>
        <th>
            
            @Html.DisplayNameFor(model => model.ItemArtUrl)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Category.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Producer.Name)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Title)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Price)
        </td>
        <td>
          
            <a href="@Url.Content(item.ItemArtUrl)">
                <img src="@Url.Content(item.ItemArtUrl)" height="160" width="200" />
                </a>

                @*@Html.DisplayFor(modelItem => item.ItemArtUrl)*@
</td>
        <td>
            @Html.DisplayFor(modelItem => item.Category.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Producer.Name)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.ItemId }) |
            @Html.ActionLink("Details", "Details", new { id=item.ItemId }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.ItemId })
        </td>
    </tr>
}

</table>
